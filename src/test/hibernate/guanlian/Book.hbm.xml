<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>

	<class name="hibernate.guanlian.Book">
		<id name="bid">
			<generator class="native"></generator>
		</id>
		<property name="bookName"></property>
		<property name="bookPrice"></property>
		<many-to-one name="author" class="hibernate.guanlian.Author" cascade="save-update"  lazy="no-proxy" foreign-key="FK_A_B" ></many-to-one>
	</class>
</hibernate-mapping>
